<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <style>
   body {
    font-family: Arial, sans-serif;
    background: #eaeaea; /* Light gray background for contrast */
    padding: 40px; /* Consistent padding around the main container */
    display: flex; /* Use flexbox to center the login container vertically */
    align-items: center; /* Align vertically */
    justify-content: center; /* Align horizontally */
    min-height: 100vh; /* Full viewport height */
    margin: 0; /* Remove default margin */
}

.login-container {
    background: white;
    padding: 30px;
    width: 100%; /* Full width */
    max-width: 350px; /* Maximum width */
    margin: 20px; /* Spacing from the viewport edges */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
    border: 1px solid #ccc; /* Subtle border */
}

label {
    display: block;
    margin-bottom: 10px; /* Space below the label */
    font-size: 16px; /* Larger font size for readability */
}

input[type="text"],
input[type="password"] {
    width: calc(100% - 24px); /* Full width taking padding into account */
    padding: 10px;
    margin-bottom: 20px; /* Increased space below inputs */
    border-radius: 4px;
    border: 1px solid #ddd;
    font-size: 16px; /* Larger font size for readability */
}

.show-hide-btn {
    display: block; /* Ensure the button takes its own line */
    padding: 10px;
    margin: 10px 0 20px 0; /* Space around the button */
    background-color: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 4px;
    color: #007bff;
    text-align: center;
    font-size: 14px;
    cursor: pointer;
    text-decoration: none; 
}

button[type="submit"] {
    width: 100%;
    padding: 15px; 
    margin-bottom: 20px; 
    border-radius: 4px;
    border: none;
    background-color: #007bff;
    color: white;
    font-size: 18px; 
    cursor: pointer;
    transition: background-color 0.3s ease, box-shadow 0.3s ease; 
}

button[type="submit"]:hover,
.show-hide-btn:hover {
    background-color: #0056b3; 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

  </style>
</head>
<body>
  <div class="login-container">
    <h1>Login</h1>
    <form action="/login" method="post">
      <div>
        <label for="username">Username or Email:</label>
        <input type="text" id="username" name="username" required placeholder="Enter username or email">
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <button type="button" id="togglePassword" class="show-hide-btn">Show Password</button>
      </div>
      <div>
        <button type="submit">Login</button>
        <p class="signup-link">
          Don't have an account? <a href="/register">Sign up</a>
        </p>
      </div>
      <% if (errorMessage) { %>
        <p style="color: red;"><%= errorMessage %></p>
      <% } %>
    </form>
  </div>
  

  <script>
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('password');

    togglePassword.addEventListener('click', function (e) {
      e.preventDefault();
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.textContent = type === 'password' ? 'Show Password' : 'Hide Password';
    });
  </script>
</body>
</html>
