<!DOCTYPE html>
<html>
<head>
  <title>Your Pets</title>
</head>
<body>
  <h1>Your Pets</h1>
  <% if(user.pets && user.pets.length > 0) { %>
    <% user.pets.forEach(pet => { %>
      <div>
        <h3><%= pet.name %></h3>
        <p>Type: <%= pet.type %></p>
        <p>Medical History: <%= pet.medicationHistory %></p> <!-- Ensure this field matches your Pet schema -->
        <% if(pet.photoUrl) { %>
          <img src="/<%= pet.photoUrl %>" alt="<%= pet.name %>" />
        <% } %>
      </div>
    <% }) %>
  <% } else { %>
    <p>No pets added yet.</p>
  <% } %>  
</body>
</html>
