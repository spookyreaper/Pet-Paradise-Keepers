<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Sitter Dashboard</title>
</head>
<body>
  <%- include('../partials/header') %> 

  <div class="dashboard-wrapper">
    <aside class="sidebar">
      <h2>Welcome, <%= user.firstName %> <%= user.lastName %></h2>
      <img src="<%= user.profilePhoto ? '/' + user.profilePhoto : '/images/default-profile.png' %>" alt="Profile Photo" class="profile-photo">
      <button class="button" onclick="location.href='/sitter/profile';">Update Profile</button>
      <button class="button" onclick="location.href='/sitter/appointments';">View Appointments</button>
      <button class="button" onclick="location.href='/sitter/availability';">Set Availability</button>
      <button class="button" onclick="logout();">Logout</button>
    </aside>
    
    <main class="main-content">
      <h1>Your Sitter Dashboard</h1>
      
      <div class="bio-info">
        <h2>About Me</h2>
        <p><%= user.biography %></p>
        <h2>Experience</h2>
        <p><%= user.experience %></p>
        <h2>Rate</h2>
        <p>$<%= user.rate %>/hour</p>
      </div>

      <div class="appointment-info">
        <h2>Your Upcoming Appointments</h2>
        <p>No upcoming appointments. Get ready to help more pets!</p>
      </div>
    </main>
  </div>

  <%- include('../partials/footer') %> 

  <script>
    function logout() {
      fetch('/logout', { method: 'POST' })
        .then(response => {
          if (response.ok) {
            window.location.href = '/login';
          } else {
            throw new Error('Logout failed.');
          }
        })
        .catch(error => console.error('Error:', error));
    }
  </script>  
</body>
</html>
